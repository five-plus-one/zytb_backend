# ====================================
# 开发环境配置
# ====================================
# 文件名: .env.development
# 用途: 本地开发使用

# 环境模式
NODE_ENV=development

# 服务器配置
PORT=11452

# 数据库配置 (本地Docker MySQL)
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASSWORD=123456
DB_NAME=volunteer_system

# JWT 配置
JWT_SECRET=dev_jwt_secret_key_change_this
JWT_EXPIRE=7d

# LLM API 配置 (开发环境 - 使用代理)
LLM_API_KEY=
LLM_BASE_URL=https://api.ai.five-plus-one.com/v1
LLM_MODEL=deepseek-chat

# OpenAI Embedding 配置
OPENAI_API_KEY=
OPENAI_API_URL=https://api.ai.five-plus-one.com/v1/embeddings
EMBEDDING_MODEL=text-embedding-3-small

# 短信服务配置 (开发环境暂时留空)
SMS_ACCESS_KEY=
SMS_SECRET_KEY=
SMS_SIGN_NAME=
SMS_TEMPLATE_CODE=

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 日志配置
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# CORS 配置 (开发环境允许所有来源)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Redis 配置 (如果使用)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 调试模式
DEBUG=true
VERBOSE_LOGGING=true
